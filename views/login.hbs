<form class="box block" action="/login" method="POST">
  <div class="field">
    <div class="control has-icons-left has-icons-right">
      <input
        class="input {{!-- is-success --}}"
        type="text"
        placeholder="email"
        name="email"
      />
      <span class="icon is-small is-left">
        <i class="fa-solid fa-envelope"></i>
      </span>
      {{!-- <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span> --}}
    </div>
    {{!-- <p class="help is-success">This email is available</p> --}}
  </div>

  <div class="field">
    <div class="control has-icons-left has-icons-right">
      <input
        class="input {{!-- is-danger --}}"
        type="password"
        placeholder="password"
        name="password"
      />
      <span class="icon is-small is-left">
        <i class="fa-solid fa-key"></i>
      </span>
      {{!-- <span class="icon is-small is-right">
        <i class="fas fa-exclamation-triangle"></i>
      </span> --}}
    </div>
    {{!-- <p class="help is-danger">smth with password</p> --}}
  </div>

  <div class="field">
    <div class="control">
      <button class="button is-link is-fullwidth" type="submit">Log In</button>
    </div>
  </div>
</form>
<div class="box block has-text-centered">
  <p>Don&#39;t have an account? <a href="/signup">Sign up!</a></p>
</div>