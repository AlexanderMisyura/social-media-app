<div class="container is-max-desktop">
  <div class="columns">
    <div class="column">
      <article class="box">
        <h1 class="title">{{post.title}}</h1>
        <figure class="image is-square mb-5">
          <img src="{{post.image}}" alt="{{post.title}} image">
        </figure>
        <div class="is-size-5">{{post.caption}}</div>
        <div class="has-text-right">
          <span class="icon has-text-warning is-clickable">
            <i class="fa-regular fa-star fa-2xl"></i>
          </span>
        </div>
      </article>
    </div>
    <div class="column is-half-tablet is-half-desktop  is-one-third-fullhd">
      <div class="box">
        <h3 class="title is-size-4">Comments</h3>
      </div>
    </div>
  </div>
</div>