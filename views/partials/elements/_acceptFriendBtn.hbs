<div class="{{#unless @root.isOwnProfile}}is-top-right-position is-toggle-hidden{{else}}is-align-self-center{{/unless}}">
  <form
    action="/friends/confirm/{{#unless @root.isOwnProfile}}{{browsedUser._id}}{{else}}{{_id}}{{/unless}}?_method=PUT"
    method="POST"
  >
    <button
      class="button is-success is-light is-rounded"
      type="submit"
      title="Accept friend request"
    >
      <span class="icon has-text-dark">
        <i class="fa-solid fa-user-check fa-xl"></i>
      </span>
    </button>
  </form>
</div>