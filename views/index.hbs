<div class="container is-max-widescreen">
  <div class="columns is-multiline">
    {{#each posts as |post|}}
      <div
        class="column is-half-tablet is-one-third-desktop"
      >
        <article class="card">
          <div class="card-header">
            <div
              class="card-header-title is-flex-direction-column is-align-items-flex-start is-max-width-100"
            >
              <div class="media mb-1 is-not-centered">
                <div class="media-left mr-2">
                  <figure class="image is-24x24">
                    <a class="has-text-dark" href="/profile/{{user._id}}">
                    <img
                      class="is-rounded"
                      src="{{user.image}}"
                      alt="user avatar"
                    />
                    </a>
                  </figure>
                </div>
                <div class="media-content">
                  <a class="has-text-dark" href="/profile/{{user._id}}">
                    <p class="title is-6 is-clipped">{{user.userName}}</p>
                  </a>
                </div>
              </div>
              <h2
                class="title is-6 is-max-width-100 is-cropped"
              >{{title}}</h2>
            </div>
          </div>
          <div class="card-image">
            <figure class="image is-square">
              <a href="/post/{{_id}}"><img
                  src="{{image}}"
                  alt="{{title}} image"
                /></a>
            </figure>
          </div>
          <div class="card-content">
            <div class="content">
              <p class="is-cropped">{{caption}}</p>
            </div>
          </div>
          <div class="card-footer is-justify-content-space-between">
            <div class="card-item">
              <span class="card-footer-item icon-text">
                <span class="icon has-text-grey-light">
                  <i class="fa-regular fa-eye fa-lg"></i>
                </span>
                <span class="has-text-grey">{{views}}</span>
              </span>
            </div>
            <div class="card-item">
              <span class="card-footer-item icon-text">
                <span class="icon has-text-grey-light">
                  <i class="fa-regular p-1 fa-comment fa-lg"></i>
                </span>
                <span class="has-text-grey">{{comments}}</span>
              </span>
            </div>
            <div class="card-item">
              <span class="card-footer-item">
                <a class="pr-1" href="">
                  <span class="icon has-text-dark">
                    <i class="fa-solid fa-share-nodes fa-lg"></i>
                  </span>
                </a>
                <span class="pr-1 is-clickable">
                  <span data-post-id="{{_id}}"
                    class="bookmark icon
                  {{#if isBookmarked}}
                    has-text-success
                  {{else}}
                    has-text-dark
                  {{/if}}">
                    <i class="fa-regular fa-bookmark fa-lg"></i>
                  </span>
                </span>
                {{{likeIcon ../loggedUser.id user._id hasLike _id likes}}}
              </span>

            </div>
          </div>
        </article>
      </div>
    {{/each}}
  </div>
</div>